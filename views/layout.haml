%html
  %head
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js", :type => "text/javascript"}
    %link{:href => "/stylesheets/normalize.css", :rel => "stylesheet"}/
    %link{:href => "/stylesheets/skeleton.css", :rel => "stylesheet"}/
    %link{:href => "/stylesheets/main.css", :rel => "stylesheet"}/
    %title Yes! Doorknocking
    - if page == 'map'
      %script{:src => "https://unpkg.com/leaflet@0.7.7/dist/leaflet.js"}
      %script{ src: '/javascript/js.cookie.js', type: 'text/javascript' }
      %script{ src: '/javascript/map.js', type: 'text/javascript' }
      %link{:href => "https://unpkg.com/leaflet@0.7.7/dist/leaflet.css", :rel => "stylesheet"}/
  %body{class: body_class(body)}
    #load.hidden
    .header
      - if page == 'map'
        = haml :map_header
      - else
        = haml :main_header
    = yield
