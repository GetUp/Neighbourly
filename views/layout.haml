%html
  %head
    %meta{:property => "og:title", :content => "GetUp Doorknocking"}
    %meta{:property => "og:description", :content => "GetUp doorknocking map page."}
    %meta{:property => "og:description", :content => "/images/logo.svg"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js", :type => "text/javascript"}
    %link{:href => "img/favicon.ico", :rel => "icon", :type => "img/ico"}
    %link{:href => "/stylesheets/normalize.css", :rel => "stylesheet"}/
    %link{:href => "/stylesheets/skeleton.css", :rel => "stylesheet"}/
    %link{:href => "/stylesheets/main.css", :rel => "stylesheet"}/
    / = File.read "./public/facebook_pixel.html"
    / = File.read "./public/google_tag.html"
    %title GetUp! Doorknocking
    - if page == 'map'
      %script{src: 'https://code.jquery.com/ui/1.12.1/jquery-ui.js'}
      %script{:src => "https://unpkg.com/leaflet@0.7.7/dist/leaflet.js"}
      %script{ src: '/javascript/js.cookie.js', type: 'text/javascript' }
      %link{:href => "https://unpkg.com/leaflet@0.7.7/dist/leaflet.css", :rel => "stylesheet"}/
      %link{:href => "/stylesheets/theme.css", :rel => "stylesheet"}/
      %link{:href => "/stylesheets/mapHeader.css", :rel => "stylesheet"}/
      %link{:href => "//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css", :rel => "stylesheet"}/
  %body{class: body_class(body)}
    #load.hidden
    .header
      - if page == 'map'
        = haml :map_header
      - else
        = haml :main_header
    = yield
